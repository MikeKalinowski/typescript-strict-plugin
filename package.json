{
  "name": "typescript-strict-plugin",
  "version": "1.0.1",
  "description": "Typescript plugin that allows turning on strict mode in specific files or directories.",
  "author": "Allegro",
  "contributors": [
    "Jaroslaw Glegola <jaroslaw.glegola@allegro.pl>",
    "Kamil Krysiak <kamil.krysiak@allegro.pl>"
  ],
  "bugs": {
    "url": "https://github.com/allegro/typescript-strict-plugin/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allegro/typescript-strict-plugin.git"
  },
  "license": "MIT",
  "bin": {
    "typescript-strict-plugin-compile": "dist/compile-time-tool/cli.js"
  },
  "main": "dist/plugin/index.js",
  "private": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npm run e2e",
    "build": "tsc",
    "dev": "tsc --watch -p .",
    "e2e": "node e2e/run.js",
    "e2e:coverage": "c8 -o e2e_coverage -x e2e -r html -i \"src/**/*\" node e2e/run.js"
  },
  "keywords": [
    "TypeScript Strict",
    "TypeScript plugin",
    "TypeScript Language Service"
  ],
  "dependencies": {
    "chalk": "^3.0.0",
    "execa": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.35",
    "c8": "^7.6.0",
    "glob": "^7.1.6",
    "lint-staged": "^10.5.4",
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-typescript": "7.9.0",
    "@types/fs-extra": "8.1.0",
    "@types/jest": "25.1.4",
    "@types/lodash": "4.14.149",
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "@typescript-eslint/parser": "4.26.0",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "fs-extra": "9.0.0",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "prettier": "2.3.1",
    "pretty-quick": "3.1.0",
    "tmp-promise": "2.0.2",
    "typescript": "4.3.2"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
