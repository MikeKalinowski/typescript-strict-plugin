{
  "name": "scoped-typescript-plugin",
  "version": "1.0.12",
  "description": "https://github.com/Microsoft/TypeScript/wiki/Writing-a-Language-Service-Plugin",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "build": "tsc",
    "dev": "watch 'echo restarting && npm run build && echo done' src --interval=1 --wait=1"
  },
  "keywords": [
    "TypeScript",
    "TypeScript plugin tutorial",
    "TypeScript Language Service",
    "tutorial",
    "example"
  ],
  "author": "Sebasti√°n Gurin",
  "license": "MIT",
  "dependencies": {
    "typescript": "^3.1.4"
  },
  "devDependencies": {
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "husky": "4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "watch": "^1.0.2"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
