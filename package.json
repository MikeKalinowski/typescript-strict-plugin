{
  "name": "typescript-strict-plugin",
  "version": "1.0.0",
  "description": "Typescript plugin that allows turning on strict mode in specific files or directories.",
  "author": "Allegro",
  "contributors": [
    "Jaroslaw Glegola <jaroslaw.glegola@allegro.pl>",
    "Kamil Krysiak <kamil.krysiak@allegro.pl>"
  ],
  "bugs": {
    "url": "https://github.com/kamkry/typescript-strict-plugin/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kamkry/typescript-strict-plugin.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "private": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npm run e2e",
    "build": "tsc",
    "dev": "tsc --watch -p .",
    "e2e": "node e2e/run.js",
    "e2e:coverage": "c8 -o e2e_coverage -x e2e -r html -i \"src/**/*\" node e2e/run.js"
  },
  "keywords": [
    "TypeScript Strict",
    "TypeScript plugin",
    "TypeScript Language Service"
  ],
  "devDependencies": {
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "c8": "^7.6.0",
    "eslint": "^7.22.0",
    "glob": "^7.1.6",
    "husky": "4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "4.1.3"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
